# API Gateway Environment Variables
# 통합 자동화 시스템 v3.1

# Server Configuration
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# JWT Configuration
JWT_ACCESS_SECRET=your-jwt-access-secret-key-change-in-production-minimum-256-bits
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production-minimum-256-bits
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=automation-system-gateway
JWT_AUDIENCE=automation-system

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=automation:

# Storage Service Configuration
STORAGE_SERVICE_URL=http://localhost:8001
STORAGE_SERVICE_TIMEOUT=5000
STORAGE_SERVICE_RETRIES=3

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# WebSocket Configuration
WEBSOCKET_PORT=8081
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_CONNECTION_TIMEOUT=60000

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_MAX_AGE=3600000
HTTPS_ONLY=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=

# Service Discovery Configuration
DEVICE_SERVICE_URL=http://localhost:8101
DEVICE_SERVICE_TIMEOUT=5000
MCP_SERVICE_URL=http://localhost:8201
MCP_SERVICE_TIMEOUT=5000
LLM_SERVICE_URL=http://localhost:8301
LLM_SERVICE_TIMEOUT=5000
WORKFLOW_SERVICE_URL=http://localhost:8401
WORKFLOW_SERVICE_TIMEOUT=5000