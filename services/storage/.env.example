# Storage Service Environment Configuration
# 계약 기반: shared/contracts/v1.0/rest/core/storage-api.yaml

# Server Configuration
NODE_ENV=development
PORT=8001
SERVICE_NAME=storage-service

# Database Configuration (TASK-3 스키마 기반)
# PostgreSQL - 관계형 데이터
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_SSL=false

# MongoDB - 문서형 데이터
MONGODB_URI=mongodb://localhost:27017/automation
MONGODB_DB_NAME=automation

# Redis - 캐시 및 세션
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# InfluxDB - 메트릭 데이터
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=
INFLUXDB_ORG=automation-system
INFLUXDB_BUCKET=metrics

# MinIO/S3 - 파일 스토리지
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=automation-files
MINIO_USE_SSL=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=storage-service
KAFKA_GROUP_ID=storage-service-group

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=1h
BCRYPT_ROUNDS=12

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
