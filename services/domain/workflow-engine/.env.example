# Workflow Engine Service Environment Variables

# Server Configuration
NODE_ENV=production
PORT=8401
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/automation

# Storage Service
STORAGE_SERVICE_URL=http://storage:8001

# Event Bus
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=workflow-engine-service

# n8n Configuration
N8N_ENCRYPTION_KEY=your-n8n-encryption-key
N8N_DATABASE_TYPE=postgresdb
N8N_DATABASE_HOST=postgres
N8N_DATABASE_PORT=5432
N8N_DATABASE_NAME=automation
N8N_DATABASE_USER=postgres
N8N_DATABASE_PASSWORD=password

# LLM Service
LLM_SERVICE_URL=http://llm-service:8301

# MCP Service
MCP_SERVICE_URL=http://mcp-service:8201

# Device Service  
DEVICE_SERVICE_URL=http://device-service:8101

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-jwt-secret-key

# Health Check
HEALTH_CHECK_INTERVAL=30000