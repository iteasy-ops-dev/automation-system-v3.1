# ========================================
# Device Management Service 환경 변수
# ========================================

# 서비스 설정
NODE_ENV=development
PORT=8101
SERVICE_NAME=device-management-service
SERVICE_VERSION=1.0.0

# 데이터베이스 연결 (Prisma)
DATABASE_URL=postgresql://postgres:password@localhost:5432/automation

# Redis 설정 (캐싱)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=automation

# InfluxDB 설정 (메트릭)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=automation-token
INFLUXDB_ORG=automation-org
INFLUXDB_BUCKET=automation

# Kafka 설정 (이벤트)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=device-management-service
KAFKA_GROUP_ID=device-service-group

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=1h

# API 제한
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket 설정
WS_PORT=8102
WS_HEARTBEAT_INTERVAL=30000

# 모니터링 설정
HEALTH_CHECK_INTERVAL=30000
METRIC_COLLECTION_INTERVAL=300000
HEARTBEAT_TIMEOUT=180000

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=./logs/device-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Storage Service 연결
STORAGE_SERVICE_URL=http://localhost:8001

# 개발 모드 설정
DEBUG=automation:device:*
