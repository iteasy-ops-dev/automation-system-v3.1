# MCP Integration Service 환경 변수
NODE_ENV=development
PORT=8201

# 데이터베이스 연결 (PostgreSQL)
DATABASE_URL=postgresql://automation:automation123@localhost:5432/automation

# Redis 연결 (캐싱 및 작업 큐)
REDIS_URL=redis://localhost:6379

# Kafka 연결 (이벤트 버스)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=mcp-integration-service
KAFKA_GROUP_ID=mcp-integration-group

# JWT 설정
JWT_SECRET=mcp-integration-secret-key-change-in-production
JWT_EXPIRES_IN=1h

# MCP 설정
MCP_EXECUTION_TIMEOUT=300000
MCP_MAX_CONCURRENT_EXECUTIONS=10
MCP_CONNECTION_POOL_SIZE=5
MCP_CONNECTION_TIMEOUT=30000

# Bull Queue 설정
BULL_REDIS_URL=redis://localhost:6379
BULL_MAX_CONCURRENT_JOBS=5

# 로깅 설정
LOG_LEVEL=debug
LOG_FILE=logs/mcp-integration-service.log

# 헬스체크 설정
HEALTH_CHECK_INTERVAL=30000